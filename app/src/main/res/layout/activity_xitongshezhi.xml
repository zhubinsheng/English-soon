<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:tb_titleText="个性设置"
        app:tb_titleTextColor ="@color/successColor"
        android:background="@color/xui_config_color_titlebar"
        android:fitsSystemWindows="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="登录特权"
        android:textColor="@color/xui_config_color_pure_yellow"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="复习震动提醒"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswTintColor="#49416E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="点击自动发声"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswTintColor="#49416E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="复习铃声提醒"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswTintColor="#49416E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="测试回想模式"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswTintColor="#49416E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="选择男女声音"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="男"
            app:kswTextOn="女"
            app:kswTintColor="#49416E" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_weight="1"
            android:text="闪记帮助助手"
            android:textSize="@dimen/size_20" />

        <com.kyleduo.switchbutton.SwitchButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:kswTextExtra="10dp"
            android:layout_weight="1"
            app:kswTextOff="OFF"
            app:kswTextOn="ON"
            app:kswTintColor="#49416E" />
    </LinearLayout>




</LinearLayout>
